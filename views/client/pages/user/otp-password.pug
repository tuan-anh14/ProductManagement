extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(5000)
    +alert-error(5000)

    .container.my-5
        .row.justify-content-center
            .col-8
                h1(class="text-center") Nhập mã OTP xác thực
                form(
                    action="/user/password/otp"
                    method="POST"
                )

                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            required
                            value=email
                            readonly
                        )
                    div(class="form-group")
                        label(for="otp") Mã OTP
                        input(
                            type="text"
                            class="form-control"
                            id="text"
                            name="text"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Xác nhận