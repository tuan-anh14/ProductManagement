extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .container.my-3

        include ../../partials/list-btn-users.pug

        .row
            .col-12
                +box-head("Lời mời kết bạn")

        .row
            .col-6
                each user in users
                    div(class="box-user add")
                        div(class="inner-avatar")
                            img(
                                src=(user.avatar ? user.avatar : "/client/images/avatar.jpg")
                                alt=user.fullName
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-buttons")
                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                    btn-accept-friend=user.id
                                    ) Chấp nhận
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-refuse-friend=user.id
                                    ) Xoá
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-deleted-friend=user.id
                                    disabled
                                    ) Đã xoá
        
        

block script 
    script(type="module" src="/client/js/users.js")