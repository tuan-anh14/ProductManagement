extends ../../layouts/default.pug

block main 
    h1(class="mb-4") Thêm mới nhóm quyền

    form(
        action=`${prefixAdmin}/roles/create`
        method="POST"
    ) 
        div(class="form-group")
          label(for="title") Tiêu đề
          input(
            type="text"
            class="form-control"
            id="title"
            name="title"
            require
          )

        div(class="form-group")
          label(for="desc") Mô tả
          textarea(
            class="form-control"
            id="desc"
            name="description"
            rows="5"
          )

        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới
